<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity"
                                                   android:background="@drawable/bg"
>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_line2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="70dp"
    />
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_line2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="70dp"
    />
    <Button
            android:id="@+id/present"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/start_line2"
            app:layout_constraintEnd_toEndOf="@id/end_line2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="550dp"
            android:text="@string/Main1"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:textColor="@android:color/white"
    />
    <Button
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/start_line2"
            app:layout_constraintEnd_toEndOf="@id/end_line2"
            app:layout_constraintTop_toBottomOf="@id/present"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/Main2"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="50dp"
    />



</androidx.constraintlayout.widget.ConstraintLayout>